# Windows Main Agent (combined Scale + Print) configuration
# Copy this file to .env and adjust values

# MQTT (central server LAN IP)
# Example: MQTT_HOST=192.168.1.50
MQTT_HOST=192.168.1.50
MQTT_PORT=1883
MQTT_USERNAME=weighuser
MQTT_PASSWORD=weighpass123
MQTT_BASE_TOPIC=weigh
MACHINE_ID=weigh1

# Serial Port (Scale)
COM_PORT=COM3
BAUD_RATE=9600
DATA_BITS=8
PARITY=none
STOP_BITS=1
UNIT=kg

# Stable detection
WINDOW_SIZE=10
STABLE_STD_MAX=5
STABLE_MIN_DURATION=1000

# Print
PRINTER_NAME=
COPIES=1
DOWNLOAD_TIMEOUT=15000

# Logging
LOG_LEVEL=info

